@{
}

@model MES_F1.Models.ViewModels.TeamAssignViewModel;

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}


<h2>Choose team</h2>

<form asp-action="TeamDisplay" method="post">
    <div>
        <label asp-for="TeamId">Team:</label>
        <select asp-for="TeamId" class="form-control" required onchange="this.form.submit()">
            <option value="">-- Choose team --</option>
            @foreach (var team in ViewBag.Teams)
            {
                <option value="@team.TeamId" selected="@(ViewBag.TeamId == team.TeamId ? "selected" : null)">
                    @team.TeamName
                </option>
            }
        </select>
    </div>
</form>



    <div>
        <a asp-action="CreateTeam" class="btn btn-primary">Create New Team</a>
    </div>



@if (ViewBag.TeamId != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>Team name</th>
                <th>Work scope</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@ViewBag.TeamName</td>
                <td>@ViewBag.TeamWorkScope</td>
                <td>
                    <form asp-action="RemoveTeam" method="post" onsubmit="return confirm('Do you want to remove this team?');">
                        <input type="hidden" asp-for="TeamId" value="@ViewBag.TeamId" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete this team</button>
                    </form>
                </td>
            </tr>
        </tbody>
    </table>

    @if (ViewBag.WorkersWithRoles != null && ViewBag.WorkersWithRoles.Count > 0)
    {
        <h4>Workers in this team</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Name and Surname</th>
                    <th>Role in the team</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var worker in ViewBag.WorkersWithRoles)
                {
                    <tr>
                        <td>@worker.WorkerName</td>
                        <td>@worker.RoleName</td>
                        <td>
                            <form asp-action="RemoveWorkerFromTeam" method="post">
                                <input type="hidden" asp-for="TeamId" value="@ViewBag.TeamId" />
                                <input type="hidden" asp-for="WorkerId" value="@worker.WorkerId" />
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>There are no workers assigned to this team.</p>
    }

    <h3>Add new worker to a team</h3>

    <form asp-action="TeamWorkerAssign" method="post">
        <input type="hidden" asp-for="TeamId" value="@ViewBag.TeamId" />

        <div>
            <label asp-for="WorkerId">Worker:</label>
            <select asp-for="WorkerId" class="form-control">
                <option value="">-- Choose worker --</option>
                @foreach (var worker in ViewBag.Workers)
                {
                    <option value="@worker.WorkerId">@worker.WorkerName</option>
                }
            </select>
            <span asp-validation-for="WorkerId" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="TeamRoleId">Role:</label>
            <select asp-for="TeamRoleId" class="form-control">
                <option value="">-- Choose role --</option>
                @foreach (var role in ViewBag.TeamRoles)
                {
                    <option value="@role.TeamRoleId">@role.RoleDescription</option>
                }
            </select>
            <span asp-validation-for="TeamRoleId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Assign</button>
    </form>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}