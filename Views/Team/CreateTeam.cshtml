@{
}
@model Team

<h2>Create Team</h2>

<form asp-action="CreateTeam" method="post" asp-action="TeamAssign">

    <div class="form-group">
        <label asp-for="TeamName" class="control-label"></label>
        <input asp-for="TeamName" class="form-control" />
        <span asp-validation-for="TeamName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TeamWorkScope" class="control-label">Select Work Scope</label>
        <select asp-for="TeamWorkScope" asp-items="Html.GetEnumSelectList<MES_F1.Models.WorkScope>()" class="form-control"></select>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}